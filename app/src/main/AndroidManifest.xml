<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hu.bme.mobilszoftver.money_exchange">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="hu.bme.mobilszoftver.money_exchange.MoneyExchangeApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="hu.bme.mobilszoftver.money_exchange.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="hu.bme.mobilszoftver.money_exchange.ui.currency.CurrencyActivity"
                android:label="@string/currency_activity"/>
    </application>

</manifest>